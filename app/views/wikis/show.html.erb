<h1><%= @wiki.title %></h1>

<div class="media wiki-body col-md-6">
    <div class="wiki-header">
        Author: <%= @wiki.user.email %><br/>
        <% if @wiki.private? %>
            <small>
                <%= content_tag :span, nil, class: 'glyphicon glyphicon-lock' %> private
            </small>
        <% end %>
    </div>
    <div class="wiki-body-content media-body">
        <%= content_tag :p, @wiki.body %>
    </div>
</div>

<div class="col-md-12 process-links">
<%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>

<% if is_authorized_to_delete?(@wiki) %>
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-warning', data: { confirm: "Are you sure you would like to delete this Wiki?" } %>
<% end %>
</div>
